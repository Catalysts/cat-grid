{
  "compilerOptions": {
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "es7",
      "dom"
    ],
    "module": "system",
    "strictNullChecks": false,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "sourceMap": false,
    "target": "es5",
    "outDir": "../../npm",
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "exclude": [
    "node_modules",
    "./**/*.spec.ts"
  ]
}
